<?xml version="1.0" encoding="utf-8"?>
<me.myfilemanager.Custom.CustomDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/revealBackground"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/myPrimaryColor"
          >
        </View>

        <View
            android:id="@+id/reveal"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/myPrimaryColor"
         >
        </View>
        <include
            android:id="@+id/appbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <FrameLayout

            android:layout_below="@id/appbar"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:smoothScrollbar="true"
                android:listSelector="?selectableItemBackground"
                android:scrollbars="vertical"
                android:layout_marginLeft="@dimen/list_horizontal_margin"
                android:layout_marginRight="@dimen/list_horizontal_margin"
                android:layout_marginStart="@dimen/list_horizontal_margin"
                android:layout_marginEnd="@dimen/list_horizontal_margin" />

        </FrameLayout>


    </RelativeLayout>
    <!-- android:layout_marginTop="?android:attr/actionBarSize"-->
    <me.myfilemanager.Fragment.ScrimInsetsFrameLayout
        style="@style/Elevation"
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="end"
        app:insetForeground="#4000"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <fragment
            android:id="@+id/fragment_drawer"
            android:name="me.myfilemanager.Fragment.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="end" />
    </me.myfilemanager.Fragment.ScrimInsetsFrameLayout>


</me.myfilemanager.Custom.CustomDrawer>